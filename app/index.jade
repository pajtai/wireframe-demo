doctype html
head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Wireframe Demo
    link(href='http://fonts.googleapis.com/css?family=Open+Sans',           rel='stylesheet', type='text/css')
    link(href='http://fonts.googleapis.com/css?family=Oswald:100,400,700',  rel='stylesheet', type='text/css')
    link(href='/wireframe-ui/pure/pure-min.css', rel='stylesheet')
    link(href='/wireframe-ui/pure/grids-responsive-min.css', rel='stylesheet')
    link(href='/wireframe-ui/style.css', rel='stylesheet')
body
    app(project='{ opts }')
        header(title='{ opts.title }', nav_items='{ opts.nav_items }')
            navigation(nav_items='{ opts.nav_items }')
        .pure-g
            list(list='{ opts.list1 }').pure-u-1.pure-u-md-1-3
            list(list='{ opts.list2 }').pure-u-1.pure-u-md-2-3
    script(type='text/javascript', src='/bundle.js')
